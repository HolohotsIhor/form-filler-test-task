@import "libs/reset.styl"
//@import "libs/fonts.styl"
@import "libs/variables.styl"
@import "libs/global.styl"

.form
  display flex
  flex-direction column
  background-color $white
  padding 25px
  box-shadow 0 8px 40px rgba(0, 0, 0, 0.1)
  margin-top 39px
  border-radius 8px
  box-sizing border-box

  @media (min-width $screen-sm)
    max-width 552px
    margin 69px auto 0
    padding 48px

  &__item
    margin-bottom 20px

    &:last-child
      margin-bottom 12px

  &__label
    font-size 14px
    line-height 1.5rem
    color $color-dark
    font-weight 700
    margin-bottom 4px

  &__input
    display flex
    width 100%
    box-sizing border-box
    border 1px solid #AAAAAA
    border-radius 4px
    padding 8px
    transition border-color .2s
    color $color-dark

    &:hover
      border 1px solid $grey

    &:focus
      outline none
      border 1px solid $grey

  &__message
    font-size 12px
    line-height 1rem
    color $red
    font-weight 600
    padding-left 8px
    display none

  &__terms
    font-size 12px
    line-height 16px
    color $color-light

  &__button
    color white
    font-weight 600
    font-size 14px
    line-height 16px
    padding 12px 0
    background-color orange
    border 0
    border-radius 4px
    width 100%
    cursor pointer
    display block
    text-align center
    transition background-color .2s

    &:hover
      background-color $orange-hover

  &__social
    margin-top 24px

  &__social-text
    font-weight 600
    font-size 14px
    line-height 24px
    margin-bottom 24px
    text-align center
    color $grey
    position relative

    &:before
      content ""
      position absolute
      left 0
      top 12px
      background-color $border-color
      border-radius 4px
      height 1px
      width 90px
      display none

      @media (min-width $screen-sm)
        display block

    &:after
      content ""
      position absolute
      right 0
      top 12px
      background-color $border-color
      border-radius 4px
      height 1px
      width 90px
      display none

      @media (min-width $screen-sm)
        display block

  &__social-container
    display flex
    align-items center
    flex-direction column

    @media (min-width $screen-sm)
      flex-direction row
      justify-content space-between

  &__social-item
    display flex
    flex-direction row
    align-items center
    width 144px
    padding 8px 0
    margin-bottom 10px
    border-radius 4px
    border 1px solid #AAAAAA
    color $color-dark
    font-weight 600
    font-size 14px
    line-height 24px
    text-decoration none
    justify-content center
    transition border-color .2s
    max-width 144px

    @media (min-width $screen-sm)
      margin-bottom 0

    &:hover
      border 1px solid $grey

    &:last-child
      margin-bottom 0
